#! /bin/sh
# preinst script for medusa (dh-make-drupal)
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
#
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

. /usr/share/debconf/confmodule

case "$1" in
    install)
        CMD="psql"
        db_get medusa/dbhost
        if [ -n "$RET" ];then
                CMD="$CMD -h$RET"
        fi
        db_get medusa/dbport
        if [ -n "$RET" ];then
                CMD="$CMD -p$RET"
        fi
        db_get medusa/dbusername
        if [ -n "$RET" ];then
                CMD="$CMD -U$RET"
        fi
        db_get medusa/dbname
        CMD="$CMD $RET"

        echo -n "Testing for database connectivity ..."
        if ( $CMD -c "SELECT TRUE;" >/dev/null 2>&1 );then
            echo " success"
        else
            echo " failed"
            echo "You need to ensure that the database exists and is accessible ..."
            echo "The database details should be as follows ..."
            db_get medusa/dbhost
            echo "Host: ${RET}"
            db_get medusa/dbport
            echo "Port: ${RET}"
            db_get medusa/dbusername
            echo "Username: ${RET}"
            db_get medusa/dbname
            echo "Database name: ${RET}"
            echo ""

            for VAR in dbhost dbport dbusername dbname; do
                db_get medusa/$VAR
                TMP="$RET"
                db_reset medusa/$VAR
                db_set medusa/$VAR $TMP
            done

            exit 1
        fi

        db_get medusa/servername
        if [ -z "$RET" ];then
            echo "You must specify a servername"
            db_reset medusa/servername
            exit 1;
        fi
    ;;
    upgrade)
    ;;
    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

db_stop
exit 0
